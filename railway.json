{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "dify-api",
      "image": "langgenius/dify-api:latest"
    },
    {
      "name": "dify-worker",
      "image": "langgenius/dify-api:latest",
      "startCommand": "celery -A app.celery worker -l INFO"
    },
    {
      "name": "dify-web",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "web/Dockerfile"
      }
    }
  ]
}
